
## Start session manager
#lxsession &

## Enable power management
xfce4-power-manager &

## Set desktop wallpaper
sh ~/.fehbg &

#basic compositing effects
compton -CGb &

## Detect and configure touchpad. See 'man synclient' for more info.
if egrep -iq 'touchpad' /proc/bus/input/devices; then
    synclient VertEdgeScroll=1 &
    synclient TapButton1=1 &
fi

## Launch panel
pypanel &

#screensaver
xscreensaver -no-splash &

#sun elevation
redshiftgui &

#stickies
globonote &

#clipboard manager
clipit &

#browser
firefox &

#file manager
pcmanfm &


#calendar
agenda-gtk &

#tomato techniquw
kontaminuti &

#network
netctl-gui &


#terminal

urxvtcd -name terminal &

(sleep 2s && urxvtcd -name termedge) &

(sleep 2s && urxvtcd -name termedge) &

(sleep 3s && stiler simple) & 

